<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.com.xgit.parts.auth.account.dao.mapper.DepartmentMapper">
  <resultMap id="BaseResultMap" type="cn.com.xgit.parts.auth.account.dao.entity.DepartmentDO">
    <id column="ID" jdbcType="VARCHAR" property="id" />
    <result column="NAME" jdbcType="VARCHAR" property="name" />
    <result column="SPACE_ID" jdbcType="VARCHAR" property="spaceId" />
    <result column="CODE" jdbcType="VARCHAR" property="code" />
    <result column="PARENT_ID" jdbcType="VARCHAR" property="parentId" />
    <result column="SEQ" jdbcType="DECIMAL" property="seq" />
    <result column="LEAF" jdbcType="DECIMAL" property="leaf" />
  </resultMap>
  <sql id="Base_Column_List">
    ID, NAME,SPACE_ID,CODE,PARENT_ID,SEQ,LEAF
  </sql>

  <select id="selectById" parameterType="java.lang.String" resultMap="BaseResultMap">
    select
    <include refid="Base_Column_List" />
    from IUS_DEPARTMENT
    where id = #{id,jdbcType=VARCHAR}
  </select>

  <select id="queryUserDeptMapByIds"  resultMap="BaseResultMap">
    select
    <include refid="Base_Column_List" />
    from IUS_DEPARTMENT
    where ID in
    <foreach collection="ids" item="id" open="(" close=")" separator=",">
      #{id,jdbcType=VARCHAR}
    </foreach>
  </select>

  <select id="queryList" parameterType="cn.com.xgit.parts.auth.account.dao.entity.DepartmentDO" resultMap="BaseResultMap">
    select
    <include refid="Base_Column_List" />
    from IUS_DEPARTMENT
    where PARENT_ID = #{deptId,jdbcType=VARCHAR}
    <if test="spaceId!=null and spaceId!=''">
      and SPACE_ID = #{spaceId,jdbcType=VARCHAR}
    </if>
  </select>

  <select id="queryDeptList" parameterType="java.lang.String"  resultMap="BaseResultMap">
    select
    <include refid="Base_Column_List" />
    from IUS_DEPARTMENT
    where 1=1
    <if test="name!=null and name!=''">
      and NAME = #{name,jdbcType=VARCHAR}
    </if>
    <if test="spaceId!=null and spaceId!=''">
      and SPACE_ID = #{spaceId,jdbcType=VARCHAR}
    </if>
    <if test="parentId!=null and parentId!=''">
      and PARENT_ID = #{parentId,jdbcType=VARCHAR}
    </if>
  </select>


  <insert id="insert" parameterType="cn.com.xgit.parts.auth.account.dao.entity.DepartmentDO">
    insert into IUS_DEPARTMENT (ID,SPACE_ID,NAME,CODE,PARENT_ID,SEQ,LEAF)
    values (#{id,jdbcType=VARCHAR},#{spaceId,jdbcType=VARCHAR},#{name,jdbcType=VARCHAR},
    #{code,jdbcType=VARCHAR},#{parentId,jdbcType=VARCHAR},#{seq,jdbcType=INTEGER},#{leaf,jdbcType=INTEGER})
  </insert>

  <update id="update" parameterType="cn.com.xgit.parts.auth.account.dao.entity.DepartmentDO">
    update IUS_DEPARTMENT
    <set>
      <if test="name != null">
        NAME = #{name,jdbcType=VARCHAR},
      </if>
      <if test="code != null">
        CODE = #{code,jdbcType=VARCHAR},
      </if>
      <if test="leaf != null">
        leaf = #{leaf,jdbcType=INTEGER},
      </if>
      <if test="seq != null">
        SEQ = #{seq,jdbcType=INTEGER},
      </if>
    </set>
    where id = #{id,jdbcType=VARCHAR}
  </update>

  <select id="checkName" parameterType="cn.com.xgit.parts.auth.account.dao.entity.DepartmentDO" resultType="java.lang.Integer" >
    select count(1) from IUS_DEPARTMENT
    where PARENT_ID = #{parentId,jdbcType=VARCHAR}
    and name = #{name,jdbcType=VARCHAR}
  </select>

  <delete id="deleteById" parameterType="java.lang.String" >
    delete from IUS_DEPARTMENT
    where id = #{id,jdbcType=VARCHAR}
  </delete>

<select id="queryLastCode" parameterType="java.lang.String" resultType="java.lang.String">
  select t.code
          from IUS_DEPARTMENT t
         where t.parent_id =#{parentId,jdbcType=VARCHAR}
         and t.SPACE_ID = #{spaceId,jdbcType=VARCHAR}
         order by t.code desc limit 1

</select>


  <select id="selectDeptNotEmpty" parameterType="cn.com.xgit.parts.auth.account.dao.entity.DepartmentDO" resultMap="BaseResultMap">
    select t.id, t.name
      from IUS_DEPARTMENT t
     inner join IUS_PROFILE u
        on t.id = u.dept_id
     where 1 = 1
       and t.CODE  like CONCAT(#{code}, '%')
       and t.space_id = #{spaceId,jdbcType=VARCHAR}
     group by t.id, t.name
  </select>


  <delete id="removeByCode" parameterType="cn.com.xgit.parts.auth.account.dao.entity.DepartmentDO" >
    delete from IUS_DEPARTMENT
    where 1=1
     and CODE  like CONCAT(#{code}, '%')
     and space_id = #{spaceId,jdbcType=VARCHAR}
  </delete>


    <select id="queryListByParent" parameterType="java.lang.String" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from IUS_DEPARTMENT
        where PARENT_ID = #{parentId,jdbcType=VARCHAR}
    </select>


</mapper>
