<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.com.xgit.parts.auth.account.dao.mapper.TemplateMapper">
  <resultMap id="BaseResultMap" type="cn.com.xgit.parts.auth.account.dao.entity.TemplateDO">
    <result column="id" jdbcType="VARCHAR" property="id" />
    <result column="name" jdbcType="VARCHAR" property="name" />
    <result column="site" jdbcType="DECIMAL" property="site" />
    <result column="remark" jdbcType="VARCHAR" property="remark" />
  </resultMap>
  <sql id="Base_Column_List">
    id, name, site, remark
  </sql>

  <select id="selectById" parameterType="java.lang.String" resultMap="BaseResultMap">
    select 
    <include refid="Base_Column_List" />
    from IUS_TEMPLATE
    where id = #{id,jdbcType=VARCHAR}
  </select>

  <select id="queryTemplateBySite" parameterType="java.lang.Integer" resultMap="BaseResultMap">
    select
    <include refid="Base_Column_List"/>
    from IUS_TEMPLATE
    where site = #{site,jdbcType=INTEGER}
  </select>

  <select id="queryList"  resultMap="BaseResultMap">
    select
    <include refid="Base_Column_List" />
    from IUS_TEMPLATE
  </select>

  <insert id="insert" parameterType="cn.com.xgit.parts.auth.account.dao.entity.TemplateDO">
    insert into IUS_TEMPLATE (id, name, site,
    remark)
    values (#{id,jdbcType=VARCHAR}, #{name,jdbcType=VARCHAR}, #{site,jdbcType=DECIMAL},
    #{remark,jdbcType=VARCHAR})
  </insert>

  <update id="updateById" parameterType="cn.com.xgit.parts.auth.account.dao.entity.TemplateDO">
    update IUS_TEMPLATE
    <set>
      <if test="name != null">
        name = #{name,jdbcType=VARCHAR},
      </if>
      <if test="remark != null">
        remark = #{remark,jdbcType=VARCHAR},
      </if>
      <if test="site != null">
        site = #{site,jdbcType=DECIMAL},
      </if>
    </set>
    where id = #{id,jdbcType=VARCHAR}
  </update>
  
  <delete id="removeById" parameterType="java.lang.String">
    delete from IUS_TEMPLATE where id = #{id,jdbcType=VARCHAR}
  </delete>

</mapper>
